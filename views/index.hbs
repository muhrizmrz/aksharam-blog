<section class="px-8 w-100 lg:w-5/6 mx-auto mt-24">
    <div id="articleSlide">
        {{#each recentArticles}}
        <a href="{{this._id}}" class="rounded">
            <div class="grid grid-cols-1 md:grid-cols-2 auto-cols-max shadow-lg h-80">
                <div class="h-80 border-r-2">
                    <img src="/static/article-images/{{this._id}}.jpg" class="h-full w-full object-cover">
                </div>
                <div class="grid grid-cols-1 justify-center bg-white my-auto p-3 md:p-10 h-full">
                    <div class="my-auto">
                        <p class="font-medium text-blue-400 uppercase">
                            {{this.catagory}}</p>
                        <h2 class="text-2xl my-1 capitalize font-bold breakwords hover:text-blue-800">{{this.topic}}
                        </h2>
                        <div class="flex mb-8">
                            <small class="font-small mr-6 font-bold text-gray-600">{{this.author}}</small>
                            <small class="font-small font-bold text-gray-600">{{this.date}}</small>
                        </div>

                        <p class="md:block hidden tracking-wider" style="font-family: Arial, Helvetica, sans-serif;">
                            ക്രിറ്റിക്കല്‍ ഇസ്ലാമിക വായനകള്‍ക്ക്ദ്രുതഗതിയിലുള്ള മാര്‍ക്കറ്റുകള്‍ ലഭ്യമാകുന്ന
                            കാലഘട്ടം
                        </p>
                    </div>
                </div>
            </div>
        </a>
        {{/each}}
    </div>

</section>

<section id="latest_articles" class="p-8 lg:w-5/6 mx-auto">
    <p class="text-2xl font-bold text-center mb-8">Latest</p>
    <div class="grid md:grid-cols-3 grid-cols-1">
        {{#each allArticles}}
        <a href="{{this._id}}" class="bg-white rounded-lg">
            <div class="bg-cover bg-center bg-opacity-50  h-full grid grid-cols-1"
                style="background-image: url('/static/article-images/{{this._id}}.jpg');">
                <div class="bg-black p-6 bg-opacity-70 hover:bg-opacity-80 h-full flex justify-self-center w-full">
                    <div class="my-auto">
                        <p class="font-medium  text-blue-400 uppercase">{{this.catagory}}</p>
                        <h2 class="text-2xl my-1 capitalize font-bold text-white hover:text-blue-200">{{this.topic}}
                        </h2>
                        <div class="flex mb-3">
                            <small class="font-small mr-6 font-bold text-gray-200 capitalize">{{this.author}}</small>
                            <small class="font-small font-bold text-gray-200">{{this.date}}</small>
                        </div>
                        <button class="p-2 mt-2 rounded-full px-5 shadow-lg bg-white text-blue-500">Read More</button>
                    </div>

                </div>
            </div>
        </a>
        {{/each}}

    </div>
</section>

