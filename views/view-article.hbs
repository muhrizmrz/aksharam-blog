<section class="md:px-12 px-4 md:mt-32 mt-24 mb-12 w-100 md:w-100 lg:w-3/4 mx-auto">
    <div class="grid md:grid-cols-1 lg:grid-cols-3 sm:grid-cols-1 grid-cols-1  gap-4">
        <div class="col-span-2 ">
            <!--ARTICLE -->
            <div class="mb-6">
                <div class="w-100 h-72">
                    <img class="h-72 object-cover w-full" src="/static/article-images/{{article._id}}.jpg">
                </div>
                <p class="capitalize tracking-wide text-blue-500 mt-4">{{article.catagory}}</p>
                <h1 class="text-2xl mb-2 font-bold">{{article.topic}}</h1>
                <div class="flex mb-4">
                    <small class="font-small font-bold text-gray-600">{{article.author}}</small>
                    <small class="ml-4 font-small font-bold text-gray-600">{{article.date}}</small>
                </div>
                <div class="break-words">{{{article.markdown}}}</div>
            </div>
            <!--ARTICLE END - RECOMMENDED FOR YOU-->
            <div class="p-3 pl-4">
                <p class="text-2xl font-bold mb-4 border-b-2">RECOMMENDED FOR YOU</p>
                <div class="grid md:grid-cols-2 sm:grid-cols-2 lg:grid-cols-2 grid-cols-1 gap-4">
                    {{#each sameTagArticles}}
                    <div class="mb-4 border-b-2 {{this._id}} recoommended-articles hidden">
                        <div class="h-48">
                            <img class="h-48 w-full object-cover" src="/static/article-images/{{this._id}}.jpg">
                        </div>
                        <p class="capitalize tracking-wide text-blue-500 mt-4">{{this.catagory}}</p>
                        <a href="{{this._id}}">
                            <h1 class="mb-2 font-bold hover:text-blue-600">{{this.topic}}</h1>
                        </a>
                        <div class="flex mb-4">
                            <small class="font-small font-bold text-gray-600">{{this.author}}</small>
                            <small class="ml-4 font-small font-bold text-gray-600">{{this.date}}</small>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>

        <!--SIDE BAR - RECOMMENDED FOR YOU-->
        <div class="p-3 pl-4 hidden lg:block md:hidden">
            <p class="text-2xl font-bold mb-4 border-b-2">RECOMMENDED FOR YOU</p>
            {{#each sameTagArticles}}
            <div class="mb-4 border-b-2 {{this._id}} recoommended-articles hidden">
                <div class="h-28">
                    <img class="h-28 w-full object-cover" src="/static/article-images/{{this._id}}.jpg">
                </div>
                <p class="capitalize tracking-wide text-blue-500 mt-4">{{this.catagory}}</p>
                <a href="{{this._id}}">
                    <h1 class="mb-2 font-bold hover:text-blue-600">{{this.topic}}</h1>
                </a>
                <div class="flex mb-4">
                    <small class="font-small font-bold text-gray-600">{{this.author}}</small>
                    <small class="ml-4 font-small font-bold text-gray-600">{{this.date}}</small>
                </div>
            </div>

            {{/each}}
        </div>
    </div>
</section>